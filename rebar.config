{deps, [
  {timing, ".*",
    {git, "https://github.com/lpgauth/timing.git", {branch, "master"}}}
]}.

{port_specs, [{"priv/ip_index_nif.so", ["c_src/*.cpp", "c_src/*.c"]}]}.

{port_env, [{"LDFLAGS", "$LDFLAGS -lstdc++"},
            {"CFLAGS", "$CFLAGS -Wall -Wextra -pedantic -O0 -std=gnu11 -ggdb"},
            {"CXXFLAGS", "$CXXFLAGS -Wall -Wextra -pedantic -std=gnu++11 -O0 -ggdb"}]}.
